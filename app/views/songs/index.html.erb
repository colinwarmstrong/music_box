<html>
  <head>
    <title>Songs</title>
    <link href="https://fonts.googleapis.com/css?family=Shrikhand" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300" rel="stylesheet">
  </head>

  <body>
    <h1>Songs</h1>

    <section class='songs-index-main'>
      <% @songs.each do |song| %>
        <article class='song-box'>
          <img src='record_player.jpg' alt='Record player'>
          <div><%= song.title %></div>
          <div><%= song.length %> seconds</div>
          <div>Play Count: <%= song.play_count %></div>
        </article>
      <% end %>
    </section>
  </body>
</html>
